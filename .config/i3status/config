# Tokyo Skyline theme by @vickylaixy
# Formatted and optimized for productivity

general {
    colors = true
    color_good = '#1dcc9f'
    color_degraded = '#27c282'
    color_bad = '#aa0e50'
    interval = 5
}

order += "disk /"
order += "wireless _first_"
order += "memory"
order += "ethernet _first_"
order += "battery BAT1"
# order += "cpu_temperature 0"
order += "load"
order += "volume master"
order += "tztime local"

disk "/" {
    format = " %avail/%total"  # Added disk icon
}

wireless _first_ {
    format_up = " %essid (%quality)"  # Simplified WiFi display
    format_down = " down"
}

ethernet _first_ {
    format_up = " %ip"          # Added ethernet icon
    format_down = ""
}

battery "BAT1" {
    path = "/sys/class/power_supply/BAT1/uevent"
    format = "%status %percentage (%remaining)"
    status_chr = ""
    status_bat = ""
    status_full = ""
    hide_seconds = true          # Removed quotes for boolean
    integer_battery_capacity = true
    low_threshold = 35           # Removed quotes for number
    threshold_type = "percentage"
}

cpu_temperature 0 {
    format = " %degrees°C"      # Added temperature icon
}

load {
    format = " %1min"           # Keep load average
}

volume master {
    format = " %volume"          # Added volume icon
    format_muted = " muted"
}

tztime local {
    format = " %a %d %b %H:%M"  # Cleaner time format
}
